
{
  "manifest_version": 3,
  "name": "Sarcasm Detection Extension",
  "description": "Detect sarcasm in text with ease!",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icons.png",
      "48": "icons/icons.png",
      "128": "icons/icons.png"
    }
  }
}
